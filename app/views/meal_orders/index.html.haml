%div(ng-app="app" ng-controller="mealOrdersCtrl" ng-init="fetchOrders()")
  .container
    .row
      .col-md-6.text-center
        %h2 Current
        %p(ng-show="todaysOrderMessage")
          {{todaysOrderMessage}}
        %p(ng-show="todaysOrder")
          {{todaysOrder.name}},
          price {{todaysOrder.price | currency:'PLN'}}


      .col-md-6.text-center
        %h2 Archived orders
        %p(ng-show="archivedOrdersMessage")
          {{archivedOrdersMessage}}
        %div(ng-repeat="order in archivedOrders")
          %p
            {{order.name}}
